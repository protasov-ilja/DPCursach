@model List<PhoneDto>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
        Data
        <small>Mobile phones</small>
    </h1>

    <!-- Project One -->
    <button class="btn btn-lg btn-primary btn-block text-uppercase" onclick="location.href='@Url.Action("AddPhone", "Admin")'">
       Add New Phone
    </button>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="card mb-8 mb-lg-0">
                <div class="card-body">

                    <hr>
                    <div class="col-md-10">
                        <ul>
                            <li>
                                <h5 asp-for="item.Name" class="card-title text-muted text-uppercase text-center">@item.Name</h5>
                            </li>
                            <li>
                                <div class="col-md-10">
                                    <a href="#">
                                        <img class="img-fluid rounded mb-3 mb-md-0" src="http://placehold.it/500x300" alt="">
                                    </a>
                                </div>
                            </li>

                            <li>
                                <h2>@item.Price</h2>
                            </li>
                            <li>
                                <h4>Amount: @item.Amount </h4>
                            </li>
                            <li>
                                <p>@item.Description</p>
                            </li>
                            <li>
                                <h4>@item.IdProducer</h4>
                            </li>
                        </ul>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" onclick="location.href='@Url.Action("EditPhone", "Admin", new { editedPhoneId = item.Id  })'">
                            Edit Data
                        </button>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" onclick="location.href='@Url.Action("Remove", "Admin", new { editedPhoneId = item.Id })'">
                            Delete Phone
                        </button>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    }

</div>


