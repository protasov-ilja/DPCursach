@model PhoneDto

@{
    ViewData["Title"] = "EditPhone";
}

<h1>EditPhone</h1>
<div class="row">
    <div class="col-md-8">
        <section>
            <form method="post" role="form" class="form-horizontal" action="~/Admin/Edit">
                @Html.AntiForgeryToken()

                <h4>Please input you data to edit</h4>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control invisible" placeholder="Id" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group custom-control custom-checkbox mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="confirm password" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" placeholder="name" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control" placeholder="last name" /> 
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" />
                </div>
            </form>
        </section>
    </div>
</div>


